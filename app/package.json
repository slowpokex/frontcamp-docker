{
  "name": "frontcamp_node_task",
  "version": "1.2.0",
  "description": "Frontcamp 3 tasks",
  "main": "index.js",
  "author": "Mikita Isakau",
  "license": "MIT",
  "scripts": {
    "lint": "standard ./src --fix",
    "test": "npm run test:unit && npm run test:int",
    "test:unit": "npm run mocha ./src/**/*.unit.js",
    "test:int": "npm run mocha ./src/**/*.int.js",
    "test:cov": "nyc npm run test:int",
    "mocha": "cross-env NODE_ENV=test mocha --exit --timeout 12000 --require babel-register --recursive",
    "clean": "rimraf dist || mkdir dist",
    "prestart": "npm run clean && npm run -s build",
    "start": "node dist/index.js",
    "build": "npm run clean && mkdir dist && babel src -s -D -d dist",
    "dev": "cross-env NODE_ENV=development DEBUG=frontcamp nodemon --exec babel-node ./src/index.js"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "bootstrap": "^4.0.0-beta.2",
    "compression": "^1.7.1",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.4",
    "cross-env": "^5.1.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "express-winston": "^2.4.0",
    "helmet": "^3.10.0",
    "http-status": "^1.0.1",
    "lodash": "^4.17.4",
    "mkdir": "0.0.2",
    "mongoose": "^5.0.2",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.4",
    "rimraf": "^2.6.2",
    "whatwg-fetch": "^2.0.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.24.1",
    "jasmine": "^2.8.0",
    "mocha": "^4.1.0",
    "nodemon": "^1.14.11"
  }
}
